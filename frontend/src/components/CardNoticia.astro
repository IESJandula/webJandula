---
// src/components/CardNoticia.astro
interface Props {
    title: string;
    summary: string;
    date: string;
    image: string;
    category: string; // Ej: 'Erasmus', 'FP', 'Evento'
    link: string;
}

const { title, summary, date, image, category, link } = Astro.props;
---

<article class="bg-white rounded-xl shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300 flex flex-col h-full border border-gray-100">

    <a href={link} class="relative h-48 overflow-hidden group">
        <img
                src={image}
                alt={`Imagen de ${title}`}
                class="w-full h-full object-cover transition-transform duration-500 group-hover:scale-110"
                loading="lazy"
        />
        <span class="absolute top-4 left-4 bg-jandula-blue text-white text-xs font-bold px-3 py-1 rounded-full shadow-md uppercase tracking-wide">
            {category}
        </span>
    </a>

    <div class="p-6 flex flex-col flex-grow">
        <time class="text-xs text-gray-500 mb-2 font-medium flex items-center">
            <svg class="w-3 h-3 mr-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8 7V3m8 4V3m-9 8h10M5 21h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v12a2 2 0 002 2z"></path></svg>
            {date}
        </time>

        <h3 class="text-xl font-bold text-gray-900 mb-3 leading-tight group-hover:text-blue-700">
            <a href={link}>
                {title}
            </a>
        </h3>

        <p class="text-gray-600 text-sm line-clamp-3 mb-4 flex-grow">
            {summary}
        </p>

        <a href={link} class="text-blue-600 font-semibold text-sm hover:underline inline-flex items-center mt-auto">
            Leer m√°s
            <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24"><path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M14 5l7 7m0 0l-7 7m7-7H3"></path></svg>
        </a>
    </div>
</article>