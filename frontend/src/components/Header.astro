---
import Logo from "@components/Logo.astro";
const navItems = [
    {name: 'Home', href: '/'},
    {name: 'Noticias', href: '/noticias'},
    {name: 'Oferta Educativa', href: '/oferta'},
    {name: 'Erasmus+', href: '/erasmus'},
    {name: 'Secretaría', href: '/secretaria'},
];

const accessLinks = [
    {name: 'Contacto', href: 'https://moodle.iesjandula.es/contacto', icon: 'C'},
];
---
<header class="shadow-md sticky top-0 z-50 bg-white">
    <div class="text-white text-xs py-2 hidden md:block bg-gradient-to-r from-jandula-green to-jandula-blue" aria-label="Accesos rápidos">
        <div class="container flex justify-end space-x-4">
            {accessLinks.map((link) => (
                    <a
                            href={link.href}
                            class="hover:text-blue-200 transition-colors font-medium"
                            aria-label={`Acceso a ${link.name}`}
                    >
                        {link.name}
                    </a>
            ))}
        </div>
    </div>

    <nav class="container py-3 flex items-center justify-between" aria-label="Navegación principal del sitio">

        <a href="/" class="flex items-center text-xl font-extrabold text-blue-900 transition-opacity hover:opacity-80"
           aria-label="Página de inicio IES Jándula">
            <Logo class="size-20"/>
        </a>

        <button id="menu-toggle" class="md:hidden p-2 rounded-lg text-blue-800 hover:bg-gray-100 transition-colors"
                aria-expanded="false" aria-controls="main-menu" aria-label="Abrir menú de navegación">
            <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24"
                 xmlns="http://www.w3.org/2000/svg">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16m-7 6h7"></path>
            </svg>
        </button>

        <ul id="main-menu" class="hidden md:flex space-x-6 font-medium text-gray-700">
            {navItems.map((item) => (
                    <li key={item.name}>
                        <a
                                href={item.href}
                                class="hover:text-blue-600 transition-colors py-2"
                                aria-current={item.href === Astro.url.pathname ? 'page' : false}
                        >
                            {item.name}
                        </a>
                    </li>
            ))}
        </ul>
    </nav>
</header>